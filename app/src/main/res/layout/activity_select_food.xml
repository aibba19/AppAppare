<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".SelectFoodActivity"
    android:background="@drawable/hamburger_1080x1920">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Scegliere le tipologie di cibo"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="25sp"
            android:textColor="#f09353"/>

        <CheckBox
            android:id="@+id/pesce"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/pesce"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/pizza"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/pizza"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/frutta"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="@string/frutta"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/hamburger"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/kebab"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/kebab"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/patatine"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/patatine"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/panini"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/panini"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/sushi"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="@string/sushi"
            android:textSize="20sp" />

        <Button
            android:id="@+id/selezionaTutto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Seleziona tutto" />

        <Button
            android:id="@+id/avanti"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Avanti" />

</LinearLayout>