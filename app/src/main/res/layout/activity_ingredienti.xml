<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodbackground"
    tools:context=".Ingredienti">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/back" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/profileBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_face_white_48dp" />

            <ImageButton
                android:id="@+id/homeBtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="-130dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/homebutton" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:layout_gravity="center"
            android:typeface="serif"
            android:text="INGREDIENTI"
            android:textColor="@color/colorAccent"
            android:textSize="40dp" />

        <CheckBox
            android:id="@+id/salame"
            android:layout_marginTop="5dp"
            android:typeface="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="100dp"
            android:text="Salame"
            android:fontFamily="cursive"
            android:textSize="40dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="60dp" />

        <CheckBox
            android:id="@+id/wurstel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="100dp"
            android:fontFamily="cursive"
            android:text="Wurstel"
            android:textSize="40dp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="80dp" />

        <CheckBox
            android:id="@+id/cotto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="100dp"
            android:fontFamily="cursive"
            android:text="Prosciutto cotto"
            android:textSize="40dp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="220dp" />

        <CheckBox
            android:id="@+id/patate"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:typeface="monospace"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="100dp"
            android:text="Patate fritte"
            android:fontFamily="cursive"
            android:textSize="40dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="300dp" />

        <CheckBox
            android:id="@+id/funghi"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="100dp"
            android:text="Funghi"
            android:fontFamily="cursive"
            android:textSize="40dp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="380dp" />

        <CheckBox
            android:id="@+id/pomodorini"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="100dp"
            android:typeface="monospace"
            android:text="Pomodorini"
            android:fontFamily="cursive"
            android:textSize="40dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="460dp" />

        <CheckBox
            android:id="@+id/rucola"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="100dp"
            android:text="Rucola"
            android:fontFamily="cursive"
            android:textSize="40dp"
            android:typeface="monospace"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="540dp" />

        <CheckBox
            android:id="@+id/pancetta"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="100dp"
            android:typeface="monospace"
            android:text="Pancetta"
            android:fontFamily="cursive"
            android:textSize="40dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="620dp" />

        <Button
            android:id="@+id/procedi"
            android:layout_width="206dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="80dp"
            android:fontFamily="cursive"
            android:onClick="onClick"
            android:text="avanti"
            android:textSize="20dp"
            android:typeface="monospace"

           />


    </LinearLayout>

</RelativeLayout>

