<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/fotofoodAffamato"
        android:src="@drawable/hamburger_elemento"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/titoloAffamato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Titolo"/>

        <TextView
            android:id="@+id/localeAffamato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="locale"/>

        <TextView
            android:id="@+id/descrizioneAffamato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descrizione"/>


        <TextView
            android:id="@+id/prezzoAffamato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="prezzo"/>

        <TextView
            android:id="@+id/scadenzaAffamato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="scadenza"/>



    </LinearLayout>

</LinearLayout>